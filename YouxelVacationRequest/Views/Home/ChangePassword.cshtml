@model BOL.Employee

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<h2>Change password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)








        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <input type="password" name="Password"  class="form-control" id="txtPassword"  required = "required" /> 
                @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <p class="control-label col-md-2" style="font-weight: bold"> Confirm Password</p> 
         
            <div class="col-md-10">
                <input type="password" class="form-control" id="txtConfirmPassword"   required = "required"/>   
            </div>
        </div>


      


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color: #4b0082" class="btn btn-primary btn-block bte changepass" name="submit" value="Change Password">
           
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Vacation History", "VacationHistory" , "LeaveRequest")
</div>
