
@model IEnumerable<BOL.Workflow>
@{
    ViewBag.Title = "Get";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<h2>Team hierarchy</h2>

<table class="table table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LevelNum)
        </th>
        <th>
     Name 
        </th>

        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LevelNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FName)
                @Html.DisplayFor(modelItem => item.Employee.LName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.ID, teamid = item.TeamID, userid = item.EmployeeID})

            </td>



            <td>
                @Html.ActionLink("Delete ", "Delete", new { id = item.ID, teamid = item.TeamID, userid = item.EmployeeID })

            </td>
        </tr>
    }

</table>
